<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Deals</h1>
    <!-- Future: Add 'Create Deal' button here if needed -->
</div>

<% if (!deals || deals.length===0) { %>
    <p class="text-center">No deals found.</p>
    <% } else { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Score</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% deals.forEach(deal=> { %>
                        <tr>
                            <td>
                                <%= deal.title %>
                            </td>
                            <td>
                                <%= deal.category %>
                            </td>
                            <td>
                                <%= deal.score %>
                            </td>
                            <td>
                                <% if (deal.score> 10) { %>
                                    <span class="badge bg-danger">Hot üî•</span>
                                    <% } else if (deal.score < -10) { %>
                                        <span class="badge bg-info text-dark">Cold ‚ùÑÔ∏è</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Neutral</span>
                                            <% } %>
                            </td>
                            <td>
                                <a href="/deals/<%= deal._id %>" class="btn btn-primary btn-sm">Details</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } %>